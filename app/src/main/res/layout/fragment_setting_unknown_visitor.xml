<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingTop="16dp"
    android:paddingRight="12dp"
    android:paddingBottom="16dp"
    tools:context=".visitor.fragments.settings.SettingUnknownVisitorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_manage" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="52dp"
            android:text="@string/settings"
            android:textAlignment="center"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textViewSettingUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="italic"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/active_notif" />

            <RadioGroup
                android:id="@+id/notifRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/notifOnRadioBtn"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_flat_selector"
                    android:button="@null"
                    android:checked="false"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/on"
                    android:textAlignment="center"
                    android:textColor="@color/radio_flat_text_selector"
                    android:textColorHighlight="@color/radio_flat_text_selector"
                    android:textColorHint="@color/radio_flat_text_selector"
                    android:textColorLink="@color/radio_flat_text_selector"
                    android:textCursorDrawable="@null"
                    android:textIsSelectable="false" />

                <RadioButton
                    android:id="@+id/notifOffRadioBtn"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_flat_selector"
                    android:button="@null"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/off"
                    android:textAlignment="center"
                    android:textColor="@color/radio_flat_text_selector"
                    android:textColorHighlight="@color/radio_flat_text_selector"
                    android:textColorHint="@color/radio_flat_text_selector"
                    android:textColorLink="@color/radio_flat_text_selector"
                    android:textCursorDrawable="@null"
                    android:textIsSelectable="false" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/select_theme" />

            <RadioGroup
                android:id="@+id/themeRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/lightRadioBtn"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_flat_selector"
                    android:button="@null"
                    android:checked="false"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/clair"
                    android:textAlignment="center"
                    android:textColor="@color/radio_flat_text_selector"
                    android:textColorHighlight="@color/radio_flat_text_selector"
                    android:textColorHint="@color/radio_flat_text_selector"
                    android:textColorLink="@color/radio_flat_text_selector"
                    android:textCursorDrawable="@null"
                    android:textIsSelectable="false" />

                <RadioButton
                    android:id="@+id/darkRadioBtn"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_flat_selector"
                    android:button="@null"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/dark"
                    android:textAlignment="center"
                    android:textColor="@color/radio_flat_text_selector"
                    android:textColorHighlight="@color/radio_flat_text_selector"
                    android:textColorHint="@color/radio_flat_text_selector"
                    android:textColorLink="@color/radio_flat_text_selector"
                    android:textCursorDrawable="@null"
                    android:textIsSelectable="false" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/select_language" />

            <RadioGroup
                android:id="@+id/langRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/frRadioBtn"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_flat_selector"
                    android:button="@null"
                    android:checked="false"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/fr"
                    android:textAlignment="center"
                    android:textColor="@color/radio_flat_text_selector"
                    android:textColorHighlight="@color/radio_flat_text_selector"
                    android:textColorHint="@color/radio_flat_text_selector"
                    android:textColorLink="@color/radio_flat_text_selector"
                    android:textCursorDrawable="@null"
                    android:textIsSelectable="false" />

                <RadioButton
                    android:id="@+id/enRadioBtn"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_flat_selector"
                    android:button="@null"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/en"
                    android:textAlignment="center"
                    android:textColor="@color/radio_flat_text_selector"
                    android:textColorHighlight="@color/radio_flat_text_selector"
                    android:textColorHint="@color/radio_flat_text_selector"
                    android:textColorLink="@color/radio_flat_text_selector"
                    android:textCursorDrawable="@null"
                    android:textIsSelectable="false" />
            </RadioGroup>

        </LinearLayout>

        <Button
            android:id="@+id/buttonToLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="@string/login"
            app:cornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="12dp" />

        <Button
            android:id="@+id/buttonToLogoutVisitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:visibility="invisible"
            app:cornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="12dp" />

    </LinearLayout>

</RelativeLayout>